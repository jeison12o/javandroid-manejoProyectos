<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GestionProyectoActivity"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el nombre"
        app:endIconMode="clear_text"
        android:layout_margin="5px">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtProyectoNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese la fecha inicio"
        app:endIconMode="clear_text"
        android:layout_margin="5px">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtProyectoFechaInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese la fecha fin"
        app:endIconMode="clear_text"
        android:layout_margin="5px">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtProyectoFechaFin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese la etapa"
        app:endIconMode="clear_text"
        android:layout_margin="5px">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtProyectoEtapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRegistroProyecto"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10px"
            android:background="@color/colorPrimary"
            android:onClick="guardarProyecto"
            android:padding="5px"
            android:text="Guardar"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>