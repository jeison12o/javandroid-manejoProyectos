<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarUsuarioActivity"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el tipo documento"
        app:endIconMode="clear_text"
        android:layout_margin="5px">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtRegistroUsuarioTipoDocumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el numero documento"
        app:endIconMode="clear_text"
        android:layout_margin="5px">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtRegistroUsuarioNumeroDocumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el nombres"
        app:endIconMode="clear_text"
        android:layout_margin="5px">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtRegistroUsuarioNombres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el apellidos"
        app:endIconMode="clear_text"
        android:layout_margin="5px">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtRegistroUsuarioApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el fecha nacimiento"
        app:endIconMode="clear_text"
        android:layout_margin="5px">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtRegistroUsuarioFechaNacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingTop="20dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese la contraseÃ±a"
        app:endIconMode="password_toggle"
        android:layout_margin="5px">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtRegistroUsuarioContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingTop="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su correo electronico"
        app:endIconMode="clear_text"
        android:layout_margin="5px">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtRegistroUsuarioCorreoElectronico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/spnRegistroUsuarioTipoUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnRegistroUsuarioCrearUsuario"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10px"
        android:background="@color/colorPrimary"
        android:onClick="guardarUsuario"
        android:padding="5px"
        android:text="Crear cuenta"
        android:textColor="@color/colorAccent"
        android:textSize="20dp" />
</LinearLayout>